@page
@model CarRentalWeb.Pages.Cars.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Car Details</h1>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Category.CarCategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Price)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Car.Price) per hour*
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Car.CarID" />
        <input type="submit" value="Delete Car Type Details" class="btn btn-danger mr-2" />
        <a class="btn btn-info" asp-page="Index">View All Car Types</a>
    </form>
</div>
