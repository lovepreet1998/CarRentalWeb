@page
@model CarRentalWeb.Pages.RentDetails.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Rent Details</h1>

<p>
    <a asp-page="Create" class="btn btn-info">Rent a Car</a>
</p>
<hr />
<div class="row">
    @foreach (var item in Model.RentDetail)
    {
        <div class="col-4">
            <div class="card mb-2">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Car.CarName)</h4>
                    <h5>@Html.DisplayFor(modelItem => item.CustomerName)</h5>
                    <h5>@Html.DisplayFor(modelItem => item.ContactNo)</h5>
                    <h6>$@Html.DisplayFor(modelItem => item.RentalDate)</h6>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.RentDetailID">Edit</a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="./Delete" class="btn btn-warning" asp-route-id="@item.RentDetailID">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>