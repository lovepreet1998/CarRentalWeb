<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentDetail.Car)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentDetail.Car.CarName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentDetail.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentDetail.CustomerName)
